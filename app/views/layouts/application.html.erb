<!DOCTYPE html>
<html>
  <head>
    <title>Sake app</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header class="header">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a href="/" class="navbar-brand brand_aj">Sake app</a>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">Bootstrap</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div id="gnavi" class="collapse navbar-collapse">
            <% if logged_in? %>
              <ul class="nav navbar-nav navbar-right">
                <li><%= link_to 'アプリについて', about_path %></li>
                <li><%= link_to '日本酒ノートを投稿する', new_sake_path %></li>
                <li><%= link_to 'ブログを投稿する', new_blog_path %></li>
                <li><%= link_to '日本酒ノート一覧', sakes_path %></li>
                <li><%= link_to 'ブログ一覧', blogs_path %></li>
                <li><%= link_to 'プロフィール', user_path(current_user.id) %></li>
                <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
              </ul>
            <% else %>
              <ul class="nav navbar-nav navbar-right">
                <li><%= link_to 'アプリについて', about_path %></li>
                <li><%= link_to '日本酒ノート一覧', sakes_path %></li>
                <li><%= link_to 'ブログ一覧', blogs_path %></li>
                <li><%= link_to "アカウント作成", new_user_path %></li>
                <li><%= link_to "ログイン", new_session_path %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <div class="container">

      <%= yield %>

    </div>
  </body>
</html>
